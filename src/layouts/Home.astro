---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import HeaderDivider from "../components/HeaderDivider.astro"

interface Props {
  title: string
  description: string
  lede: string
}

const { title, description, lede } = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />

    <main>
      <article>
        <div>
          <div class="flex flex-col gap-3 pb-48 md:w-1/2">
            <h1>{title}</h1>
            <h3>{lede}</h3>
          </div>
          <HeaderDivider />
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
