---
interface Props {
  label: String
  placeholder: String
}

const { label, placeholder } = Astro.props
---

<custom-input>
  <input name={label} id={label}
         class="text-gray-400 text-sm font-medium outline-none border-b-2 py-2 w-full my-4 mx-2"
         placeholder={placeholder} required>
</custom-input>
