---
import { getCollection } from "astro:content"
import Layout from "../layouts/Layout.astro"
import PublicationSection from "../components/Publications"

const pubs = (await getCollection("publications")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
const data = pubs.map((pub) => pub.data)
---

<Layout title="Publications" description="Publications associated with MMP">
  <PublicationSection publications={data} client:only="react" />
</Layout>
